@model LuckySpin.Models.Spin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject LuckySpin.Services.TextTransformService Transform
@inject LuckySpin.Services.RepoService Repo
@{
    Layout = "_Layout";
    int[] number = Model.Number;
    //TODO: Use the RepoService AddSpins method to add the Spin Model data to the Repository
    Repo.AddSpin(Model);
}
<h1>Lucky Spin</h1>
<h2 style="@Model.Display">@Model.Player.FirstName, You Win with a Lucky @Transform.numberToText(Model.Player.Luck)</h2>
<button onclick='history.go(0)'>Spin</button>

<div>@number[0]</div><div>@number[1]</div><div>@number[2]</div>

<img src="/Images/LuckySpinCoins.jpg" class="animated bounce" alt="Coins" style="@Model.Display" />
<!-- Add a link to the LuckList Action using the "anchor" tag helper  -->
<hr/>
<a asp-controller = "Spinner" asp-action = "LuckList">See your Luck</a>